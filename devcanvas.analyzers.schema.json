{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://github.com/maxk1219/test/blob/master/devcanvas.analyzers.schema.json",
  "title": "DevCanvas Analyzers Configuration",
  "description": "Configuration file for DevCanvas Analyzers",
  "type": "object",
  "properties": {
    "tracerSettings": {
      "type": "object",
      "properties": {
        "typeDefinitions": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 1,
          "items": [
            {
              "type": "object",
              "properties": {
                "typeFQN": { "type": "string" },
                "methodName": { "type": "string" },
                "parameterName": { "type": "string" }
              },
              "required": [
                "typeFQN",
                "methodName",
                "parameterName"
              ]
            }
          ]
        },
        "tagMode": { "enum": [ "local", "remote" ] },
        "remoteConfig": {
          "type": "object",
          "properties": {
            "gitLocation": { "type": "string" },
            "tagSeed": { "type": "number" }
          },
          "required": [
            "gitLocation",
            "tagSeed"
          ]
        }
      },
      "required": [
        "typeDefinitions",
        "tagMode"
      ],
      "anyOf": [
        {
          "properties": {
            "tagMode": { "const": "remote" }
          },
          "required": [ "remoteConfig" ]
        }
      ]
    }
  },
  "required": [
    "tracerSettings"
  ]
}
